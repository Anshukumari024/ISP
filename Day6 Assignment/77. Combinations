class Solution {
    public List<List<Integer>> combine(int n, int k) {
        List<List<Integer>> list = new ArrayList<>();
        List<Integer> ll = new ArrayList<>();
        comb(1,n,k,ll,list);
        return list;
        
    }
    public static void comb(int idx,int n,int k,List<Integer> ll, List<List<Integer>> list){
        if(ll.size()==k){
            list.add(new ArrayList<>(ll));
            return;
        }

        for(int i=idx;i<=n;i++){
            ll.add(i);
            comb(i+1,n,k,ll,list);
            ll.remove(ll.size()-1);
        }
    }
}
